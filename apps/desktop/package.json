{
  "name": "butler",
  "version": "1.0.1",
  "description": "Butler - A fast, lightweight Windows launcher with instant search and clipboard management",
  "main": "dist/main/main/index.js",
  "homepage": "./",
  "author": "Monish Gosar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MonishGosar/Butler.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "dist": "npm run build && electron-builder --win",
    "start": "electron .",
    "test": "vitest run"
  },
  "keywords": [
    "launcher",
    "windows",
    "search",
    "spotlight",
    "clipboard",
    "electron",
    "productivity"
  ],
  "devDependencies": {
    "@types/node": "^25.0.5",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "39.2.7",
    "electron-builder": "^26.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.monishgosar.butler",
    "productName": "Butler",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "index.html",
      "clipboard.html"
    ],
    "win": {
      "target": "dir",
      "signAndEditExecutable": false
    }
  }
}